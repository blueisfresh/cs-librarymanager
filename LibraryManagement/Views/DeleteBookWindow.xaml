<Window x:Class="LibraryManagement.Views.DeleteBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete Book" Height="200" Width="300">
    <Grid Margin="20">
        <!-- Title -->
        <TextBlock Text="Delete Book" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,10"/>

        <!-- BookNum Field -->
        <TextBlock Text="Book Number:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,50,0,0"/>
        <TextBox x:Name="BookNumTextBox" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="100,50,0,0" Width="150"/>

        <!-- Delete Button -->
        <Button Content="Delete" Width="80" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,0" Click="DeleteButton_Click"/>
    </Grid>
</Window>
